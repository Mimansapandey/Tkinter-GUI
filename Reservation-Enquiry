from tkinter import *
from tkinter.ttk import Combobox
#Passenger Reservation Enquiry
box = Tk()
fr1 = Frame(box)
fr1.pack()
fr2 = Frame(box)
fr2.pack()
fr3 = Frame(box)
fr3.pack()
box.title("Reservation Enquiry")
fr4 = Frame(box)
fr4.pack()
fr5 = Frame(box)
fr5.pack()
fr6 = Frame(box)
fr6.pack()

Ss = Label(fr1,text = 'Source station',bg = 'red')
Ss.pack(side = 'right')
Ssl = ['Raipur','Mumbai','Delhi','Calcutta','Pune']
Ssc = Combobox(fr1,values=Ssl)
Ssc.pack()
Ds = Label(fr2,text = 'Destination station', bg = 'red')
Ds.pack(side = 'right')
Dsl = ['Bhilai','Bilaspur','Goa','UP']
Dsc = Combobox(fr2,values=Dsl)
Dsc.pack()
menubar = Menu(box)
box.config(menu=menubar)
PNR_Status = Menu(menubar)
menubar.add_cascade(label='PNR status',menu=PNR_Status)
Seat_availability = Menu(menubar)
menubar.add_cascade(label='Seat Availability',menu=Seat_availability)
Fare_Enquiry = Menu(menubar)
menubar.add_cascade(label = 'Fare Enquiry',menu = Fare_Enquiry)
Trains = Menu(menubar)
menubar.add_cascade(label = 'Trains', menu = Trains)
Ae = Menu(Trains)
Trains.add_cascade(label='Arunachal Express', menu = Ae)
Re = Menu(Trains)
Trains.add_cascade(label='Rajdhani Express', menu = Re)
He = Menu(Trains)
Trains.add_cascade(label='Azad Hind Express', menu =He)
lh = Menu(Fare_Enquiry)
Fare_Enquiry.add_cascade(label = 'Low to high',menu = lh)
hl = Menu(Fare_Enquiry)
Fare_Enquiry.add_cascade(label = 'High to low',menu = hl)
def info():
    print("You can check your PNR status here")
info = Menu(PNR_Status)
PNR_Status.add_command(label ='Info', command = info)
def info1():
    print("Sorry! No info yet")
Details = Menu(Seat_availability)
Seat_availability.add_command(label='Details', command = info1)
from tkinter import messagebox
def msg():
    m = messagebox.askyesnocancel('Do you wish to proceed?','yes or no?')
    print(m)
but1 = Button(box, text = 'Confirm',bg = 'red', command = msg)
but1.pack()
traintype = ['Fast','Super fast','All types']
tt = Label(fr3,text = 'Train type',bg = 'red' )
tt.pack(side = 'right')
cb1 = Combobox(fr3, values = traintype)
cb1.pack()
a = BooleanVar()
way = Radiobutton(fr4,text = 'One Way',variable = a, value = True )
way.pack(side = 'right')
way2 = Radiobutton(fr4,text = 'Return Journey', variable = a, value = False)
way2.pack(side = 'right')
jd = Listbox(fr5,width = 60,height = 1,selectmode = SINGLE)

J = ['Indian Railway (IR) runs more than 20,000 passenger trains daily, on both long-distance and suburban routes, from 7,321 stations across India.']
for i in J:
    jd.insert(J.index(i),i)
jd.pack()
c = StringVar()
but2 = Checkbutton(fr6, text = 'i agree to the Indian Railways Terms of service and Privacy Policy',onvalue = 'Accepted',offvalue='Rejected',variable=c)
but2.pack()
box.mainloop()
